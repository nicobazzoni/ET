<%= link_to @planet.name, @planet %><br>
<%= hidden_field_tag :planet, @planet.id%>

<%= link_to new_planet_alien_planet_path, @planet %><br>

<%= button_to "Edit #{@planet.name}", edit_alien_path(@planet), method: :get %>
<%= button_to "Delete #{@planet.name}", @planet, method: :delete %>

 
<h5> Species Inhabiting <%= @planet.name %> </h5>

<% if @planet.species.any? %>
<% @planet.species.each do |species| %> <br>
   <h1> <%= link_to species.name, species %> </h1>
  <% end %>
 <% else %>
<%= @planet.name %> is vacant! 
<% end %>